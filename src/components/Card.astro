---
interface Props {
  title: string;
  body?: string;
  href?: string;
  value: number;
}

const { href, title, body, value } = Astro.props;
---

<div
  class="bg-black/50 w-[90dvw] min-h-[200px] rounded-md border-2 border-solid cursor-pointer"
  class:list={[
    { "border-custom-red": value < 0 },
    { "border-custom-green": value > 0 },
    { "border-custom-white/50": value == 0 },
  ]}
>
  <a href={href}>
    <h2>{title}</h2>
    <p>{body}</p>
  </a>
</div>
